{
  "module": "auth",
  "endpoints": {
    "register": {
      "method": "POST",
      "path": "/register",
      "request": {
        "type": "object",
        "properties": {
          "username": {"type": "string"},
          "password": {"type": "string"}
        },
        "required": ["username", "password"]
      },
      "response": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "username": {"type": "string"}
        },
        "required": ["id", "username"]
      }
    },
    "login": {
      "method": "POST",
      "path": "/login",
      "request": {
        "type": "object",
        "properties": {
          "username": {"type": "string"},
          "password": {"type": "string"}
        },
        "required": ["username", "password"]
      },
      "response": {
        "type": "object",
        "properties": {
          "token": {"type": "string"},
          "user": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "username": {"type": "string"}
            },
            "required": ["id", "username"]
          }
        },
        "required": ["token", "user"]
      }
    }
  },
  "dataModels": {
    "User": {"id": "string", "username": "string", "password_hash": "string", "created_at": "string"},
    "Wallet": {"user_id": "string", "balance": "integer"}
  },
  "errors": [
    {"code": "USER_EXISTS", "message": "User already exists"},
    {"code": "INVALID_CREDENTIALS", "message": "Invalid credentials"},
    {"code": "INTERNAL", "message": "Internal server error"}
  ]
}
